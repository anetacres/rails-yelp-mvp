<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <h2>Please leave a review for <%= @restaurant.name %></h2>

      <%= simple_form_for([@restaurant, @review]) do |f| %>
        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.submit class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
